<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/orange_300</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>


  </style>
  <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
    <item name = "android:windowActionBar">false</item>
    <item name = "android:windowNoTitle">true</item>
  </style>
  <style name="CustomTextAppearance" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/_15sdp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CustomTextAppearance1" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/_15sdp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
