<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/md_20"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/colorAccent"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/background"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="@dimen/md_15"
        card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/md_20"
        >

      <!--  <ImageView
            android:id="@+id/jobimage"
            android:background="@drawable/job"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:padding="4dp" />-->
        <TextView
            android:id="@+id/job_title1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:text="@string/jobtitle1"
            android:textColor="@color/colortext" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/role"></TextView>
        <TextView
            android:id="@+id/job_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:layout_toRightOf="@id/job_title1"
            android:text="Apple MacBook Air Core i5 5th Gen"
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/job_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        <TextView
            android:id="@+id/job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/job_wages1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/md_25"
            android:textColor="@color/colortext"
            android:text="@string/wages"
            />

        <TextView
            android:id="@+id/job_wages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/md_25"
            android:layout_toRightOf="@id/job_wages1"
            android:background="@drawable/gradient"
            android:paddingLeft="@dimen/md_20"
            android:paddingRight="@dimen/md_20"
            android:textColor="@color/colorBackground"
             />

        <TextView
            android:id="@+id/job_area1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="Location Of Job :"
            android:textSize="@dimen/md_15" />

        <TextView
            android:id="@+id/job_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:layout_toRightOf="@id/job_area1"
            android:text="INR 56990"
            android:textSize="@dimen/md_15"/>
        <TextView
            android:id="@+id/createdby1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="Job Posted By : "
            android:textSize="@dimen/md_15"/>

       <TextView
            android:id="@+id/createdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:visibility="invisible"/>
        <TextView
            android:id="@+id/createdbyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:layout_toRightOf="@id/createdby1"
            android:text="INR 56990"
            android:textSize="@dimen/md_15"/>
        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdbyname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right|bottom"
            android:textStyle="bold"
            android:textColor="@color/red_400"
            android:text="Posted :"
            android:textSize="@dimen/md_20"/>
         <TextView
             android:id="@+id/date"
             android:layout_width="wrap_content"
             android:layout_toRightOf="@id/date1"
             android:layout_height="@dimen/_20sdp"
             android:layout_below="@id/createdbyname"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="5dp"
             android:textStyle="bold"
             android:layout_alignParentRight="true"
             android:textColor="@color/red_400"
             android:text="INR 56990"
             android:textSize="@dimen/md_20"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>