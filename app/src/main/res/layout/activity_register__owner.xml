<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner.Register_Owner"
    android:background="@drawable/new_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_120sdp"
                android:id="@+id/imageglobal"
                android:layout_gravity="center"
                android:src="@drawable/logof"></ImageView>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp">

                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:hint="@string/username"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    >

                    <EditText
                        android:id="@+id/et_registerownername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/cellphone"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobnum"
                    android:textColorHint="@color/white"
                    >

                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/et_registerowneremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:inputType="phone"


                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/key"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:hint="@string/password"
                    android:textColorHint="@color/white"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/et_registerownerpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:inputType="textPassword"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/key"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:hint="@string/cpass"
                    app:passwordToggleEnabled="true">


                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/et_ownerregisterownerconfirmpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:inputType="textPassword"


                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/md_25"
                android:layout_marginRight="@dimen/md_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/md_25">

                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:hint="@string/refrename"
                    android:textColorHint="@color/white"
                    android:textColor="@color/colortext"
                    >

                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/editrefrednameO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColorHint="@color/colortext"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/md_25"
                android:layout_marginRight="@dimen/md_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/md_25">

                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:hint="@string/refcode"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    >

                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/editrefercodeO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColorHint="@color/white"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>



        </LinearLayout>


        <Button
            android:id="@+id/btn_registerowner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_25sdp"
            android:background="@drawable/gradient"
            android:text="@string/signup"
            android:textColor="#ffffff"></Button>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_25sdp"
            android:gravity="center"
            >

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a Member ?"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_existingownerowner"
                android:text="@string/existinguser"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/red_900"

                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>