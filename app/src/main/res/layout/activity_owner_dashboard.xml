<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner.OwnerDashboard"
    android:background="@color/grey_300"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"

            android:background="@drawable/bg_shape"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/owner_pro"
            android:padding="@dimen/_5sdp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Name :"
            android:id="@+id/fetchusername"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered ID: "
            android:id="@+id/fetchuserID1"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:id="@+id/fetchuserIDOwner"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_60sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_toRightOf="@+id/fetchuserID1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textfetchusernameOwner"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="user"
            android:textSize="@dimen/_12sdp"
            android:layout_toRightOf="@id/fetchusername"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"
            ></TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_120sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnownerprofile"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/owner_pro"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat" />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnownerprofile"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Profile"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnownerjoboffer"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/job_post_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"
                            />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnownerjoboffer"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Post Job"
                            android:textAllCaps="false"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp"
                            />



                    </RelativeLayout></androidx.cardview.widget.CardView></LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>





        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_250sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/background"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnownerjobstatus"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/approve_reject_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat" />


                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnownerjobstatus"

                            android:text="Approve/Reject"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/btnownergetwages"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/wages_new"
                            android:padding="@dimen/_5sdp"

                            />

                        <TextView
                            android:id="@+id/textView1221"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnownergetwages"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Wages"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp"
                            />


                    </RelativeLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_380sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout23"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/background"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/btnownerremark"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:srcCompat="@drawable/wages_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"

                            />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text=" Payment Status"
                            android:textAllCaps="false"
                            android:layout_below="@id/btnownerremark"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/btnlogoutowner"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:srcCompat="@drawable/logout_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"

                            />

                        <TextView
                            android:id="@+id/textView121"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnlogoutowner"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="LogOut"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp"
                            />


                    </RelativeLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</ScrollView>