<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_gradient"
    tools:context=".Engineer.LoginEngineer"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageglobal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:src="@drawable/logof" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llMain"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/cellphone"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:id="@+id/textInputLayoutEmail"
                    android:hint="@string/mobnum">

                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:id="@+id/loginengname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_marginTop="@dimen/_14sdp"
                    android:src="@drawable/key"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    app:hintTextAppearance="@style/CustomTextAppearance"
                    android:textColorHint="@color/white"
                    android:id="@+id/textInputLayoutPasswordarchitect"
                    app:passwordToggleEnabled="true">



                    <EditText
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:id="@+id/loginengpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:inputType="textPassword"

                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_loginengineer"
            android:layout_margin="@dimen/_25sdp"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/_15sdp"
            android:background="@drawable/gradient"/>



        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/pgb1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/md_25"
            android:gravity="center"

            >
            <TextView
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_new_usereng"
                android:text="@string/newuser"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/red_900"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>