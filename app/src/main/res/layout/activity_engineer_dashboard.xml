<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Engineer.EngineerDashboard"
    android:background="@color/grey_300"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:background="@drawable/bg_shape"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/engineeer_pro"
            android:padding="@dimen/_5sdp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered Name :"
            android:id="@+id/fetchusername"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered ID: "
            android:id="@+id/fetchuserID1"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:id="@+id/fetchuserIDengineer"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_toRightOf="@+id/fetchuserID1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"

            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textfetchusernameengineer"
            android:textColor="@color/colortext"
            android:layout_marginTop="@dimen/_40sdp"
            android:text="user"
            android:textSize="@dimen/_12sdp"
            android:layout_toRightOf="@id/fetchusername"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"
            ></TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_100sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnengprofile"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/engineeer_pro"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat" />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnengprofile"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Profile"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnengjoboffer"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/job_post_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"
                            />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnengjoboffer"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Job Offer"
                            android:textAllCaps="false"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            />



                    </RelativeLayout></androidx.cardview.widget.CardView></LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_250sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/background"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/btnengjobstatus"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/job_status_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat" />


                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnengjobstatus"

                            android:text="Job Status"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnenggetwages"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/wages_new"
                            android:padding="@dimen/_5sdp"

                            />

                        <TextView
                            android:id="@+id/textView1221"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnenggetwages"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Wages"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            />


                    </RelativeLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_400sdp"
            >



            <LinearLayout
                android:id="@+id/linearLayout23"
                android:layout_width="0dp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/background"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/btnengremark"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"

                            app:srcCompat="@drawable/review_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"

                            />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnengremark"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Write Review"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="@color/background"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/btnlogouteng"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:srcCompat="@drawable/logout_new"
                            android:padding="@dimen/_5sdp"
                            tools:ignore="VectorDrawableCompat"

                            />

                        <TextView
                            android:id="@+id/textView121"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnlogouteng"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="LogOut"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            />


                    </RelativeLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</ScrollView>