<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_20"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorAccent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--   <ImageView
               android:id="@+id/jobimage"
               android:background="@drawable/job"
               android:layout_width="100dp"
               android:layout_height="110dp"
               android:padding="4dp" />-->
        <TextView
            android:id="@+id/job_titleapply1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:text="Job : "
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/jtitle"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/job_titleapply1"
            android:text="Apple MacBook Air Core i5 5th Gen"
            android:textColor="@color/colortext" />

         <TextView
            android:id="@+id/jid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:visibility="gone"
            android:text="13.3 Inch, 256 GB"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        <TextView
            android:id="@+id/job_wagesapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_titleapply1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:text="Job Wages : "
            />
        <TextView
            android:id="@+id/jwages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jtitle"
            android:layout_toRightOf="@id/job_wagesapply1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/md_20"
            android:paddingRight="@dimen/md_20"
            android:background="@drawable/gradient"
            android:textColor="@color/colorBackground"
            />


        <TextView
            android:id="@+id/wlname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jwages"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:text="Labor Name :"
            android:textSize="@dimen/md_15"/>

        <TextView
            android:id="@+id/wlname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jwages"
            android:layout_toRightOf="@id/wlname1"
            android:textColor="@color/colortext"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="INR 56990"
            android:textSize="@dimen/md_15"/>
        <TextView
            android:id="@+id/applieddateapply1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wlname"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colortext"
            android:layout_marginBottom="@dimen/md_10"
            android:text="Status : "
            android:textSize="@dimen/md_15"/>
        <TextView
            android:id="@+id/wstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wlname"
            android:layout_toRightOf="@id/applieddateapply1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:text="INR 56990"
            android:textSize="@dimen/md_15"/>

        <TextView
            android:id="@+id/lid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/wcname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>