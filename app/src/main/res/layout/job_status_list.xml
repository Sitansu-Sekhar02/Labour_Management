<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorAccent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/background"
    card_view:cardCornerRadius="@dimen/_10sdp"
    card_view:cardElevation="@dimen/_5sdp"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        >

        <TextView
            android:id="@+id/job_title12"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Job : "
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/job_title1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/job_title12"
            android:textColor="@color/colortext" />

        <TextView
            android:id="@+id/job_details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/job_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/job_wages12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_15sdp"
            android:text="Wages : "
            />

        <TextView
            android:id="@+id/job_wages1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_title1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/job_wages12"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/gradient"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:textColor="@color/colorBackground"
            android:textSize="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/job_area12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Job Location : "
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colortext"/>

        <TextView
            android:id="@+id/job_area1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_wages1"
            android:layout_toRightOf="@id/job_area12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="INR 56990"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_15sdp"/>
        <TextView
            android:id="@+id/applied_by1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        <TextView
            android:id="@+id/approved_by12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Approval Given By:"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/approved_by1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/approved_byname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_area1"
            android:layout_toRightOf="@id/approved_by12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/colortext"
            android:text="INR 56990"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/applieddate12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/approved_by12"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Date"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colortext"
            />

        <TextView
            android:id="@+id/applieddate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/approved_byname"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/applieddate12"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="INR 56990"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_15sdp"
          />
        <TextView
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/track_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applieddate1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/red_400"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Job Expired"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>