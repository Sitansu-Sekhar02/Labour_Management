<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Labour.LaborProfile"
    android:background="@color/grey_300"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/bg_shape" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/labor_pro"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Name :"
        android:id="@+id/fetchusername"
        android:textColor="@color/colortext"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reffered By : "
        android:id="@+id/fetchuserID1"
        android:textColor="@color/colortext"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_below="@+id/fetchusername"
        android:textSize="@dimen/_15sdp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name "
        android:id="@+id/fetchuserID"
        android:textColor="@color/colortext"
        android:textSize="@dimen/_15sdp"
        android:layout_toRightOf="@+id/fetchuserID1"
        android:layout_below="@+id/fetchusername"

        ></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textfetchusername"
        android:textColor="@color/colortext"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="user"
        android:textSize="@dimen/_15sdp"
        android:layout_toRightOf="@id/fetchusername"
        ></TextView>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textrefname1"
    android:textColor="@color/colortext"
    android:text="Registerd ID :"
    android:layout_marginLeft="@dimen/_80sdp"
    android:textSize="@dimen/_15sdp"
    android:layout_below="@+id/fetchuserID1"
    ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textrefname"
        android:textColor="@color/colortext"
        android:text="ID "
        android:layout_toRightOf="@+id/textrefname1"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/fetchuserID1"
        ></TextView>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_100sdp"
        >



        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardBackgroundColor="@color/background"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btnlaborprofile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/labor_pro"
                        android:padding="@dimen/_5sdp"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnlaborprofile"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/profile"
                     android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardBackgroundColor="@color/background"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btnlaborjoboffer"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/job_post_new"
                        android:padding="@dimen/_5sdp"
                        tools:ignore="VectorDrawableCompat"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnlaborjoboffer"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/joboffer"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        />



                </RelativeLayout></androidx.cardview.widget.CardView></LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        >



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/background"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btnjobstatus"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/job_status_new"
                        android:padding="@dimen/_5sdp"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnjobstatus"
                        android:text="@string/jobstats"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        /></RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/background"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                  <!--  <ImageButton
                        android:id="@+id/btnremark"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/remark"
                        android:padding="5dp"
                        tools:ignore="VectorDrawableCompat"

                        />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnremark"
                        android:layout_marginTop="10dp"
                        android:text="Remark"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="15dp"
                        />-->
                    <ImageView
                        android:id="@+id/btngetwages"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_15sdp"
                       android:background="@drawable/wages_new"
                        android:padding="@dimen/_5sdp"

                        />

                    <TextView
                        android:id="@+id/textView1221"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btngetwages"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/wages"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        />


                </RelativeLayout></androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="480dp"
        >



        <LinearLayout
            android:id="@+id/linearLayout23"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/background"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btnremark"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:srcCompat="@drawable/review_new"
                    android:padding="@dimen/_5sdp"
                    tools:ignore="VectorDrawableCompat"

                    />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnremark"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/review"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    /></RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardBackgroundColor="@color/background"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btnlogoutlabor"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:srcCompat="@drawable/logout_new"
                        android:padding="@dimen/_5sdp"
                        tools:ignore="VectorDrawableCompat"

                        />

                    <TextView
                        android:id="@+id/textView121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnlogoutlabor"
                        android:text="@string/logout"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        />


                </RelativeLayout></androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
</ScrollView>