<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_20"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/background"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="@dimen/md_15"
    card_view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_25sdp">
        <TextView
            android:id="@+id/jobtitlewages1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/md_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_5"
            android:textColor="@color/colortext"
            android:text="@string/jobtitle1"/>

        <TextView
            android:id="@+id/jobtitlewages"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/md_10"
            android:layout_toRightOf="@id/jobtitlewages1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colortext" />


        <TextView
            android:id="@+id/textjobidwages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/jobwageswages1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/jobtitlewages"
            android:layout_marginLeft="@dimen/md_5"
            android:textColor="@color/colortext"
            android:text="@string/jobwages1"
            android:textSize="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/jobwageswages"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/jobwageswages1"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/jobtitlewages"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:background="@drawable/gradient"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/applied_by1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobwageswages1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_15sdp"
            android:text="@string/labourname"
            />

        <TextView
            android:id="@+id/laborname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobwageswages"
            android:layout_toRightOf="@id/applied_by1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_15sdp"/>


        <TextView
            android:id="@+id/appl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/laborname"
            android:layout_marginLeft="5dp"
            android:text="Labor Id :"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/applied_by"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colortext"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_15sdp"
            android:layout_toRightOf="@+id/appl"
            android:layout_below="@+id/laborname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/wages_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applied_by"
            android:layout_marginLeft="5dp"
            android:textColor="@color/red_400"
            android:layout_marginTop="15dp"
            android:text="Money Transfer Done"
            android:textStyle="bold"
            android:textSize="@dimen/md_15"/>

        <TextView
            android:id="@+id/contractorname"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        <TextView
            android:id="@+id/createdbyid"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />


    </RelativeLayout>

</androidx.cardview.widget.CardView>